<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>travel-system</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>Authenticated</filter-name>
    <filter-class>br.cefet.filters.AuthenticatedFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Authenticated</filter-name>
    <url-pattern>/views/place-visited-register.jsp</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>Authenticated</filter-name>
    <url-pattern>/views/experience-register.jsp</url-pattern>
  </filter-mapping>
</web-app>